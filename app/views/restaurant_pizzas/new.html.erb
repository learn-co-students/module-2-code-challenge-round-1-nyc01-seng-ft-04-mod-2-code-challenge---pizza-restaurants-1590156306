<h1>New Restaurant Pizza Association</h1>

<% if flash[:my_errors] %>
<%= flash[:my_errors] %>
<% end %>

<%= form_for @restaurant_pizza do |f| %>

<%= f.label "Restaurant" %>
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>

<%= f.label "Pizza" %>
<%= f.collection_select :pizza_id, Pizza.all, :id, :name %>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.submit %>
<% end %>