<% if flash[:pizza_errors] %>
    <% flash[:pizza_errors].each do |error|%>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @restaurant_pizza do |f| %>
    <%= f.label :pizza_id %>
    <%= f.collection_select :pizza_id, @pizzas, :id, :name %>
 
    <%= f.label :restaurant_id %>
    <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
 
    <%= f.label :price %>
    <%= f.number_field :price %>
 
    <%= f.submit %>
<% end %>
