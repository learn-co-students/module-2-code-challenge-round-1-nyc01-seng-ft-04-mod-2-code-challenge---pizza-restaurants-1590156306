<h1>Order Pizza</h1>

<% if flash[:restaurant_pizza_errors] %>
    <% flash[:restaurant_pizza_errors].each do |error| %>
<p style='color:yellow;'><%= error %></p>
    <% end %>
<% end %>


<%= form_for @restaurant_pizza do |f| %>
    <%= f.label :restaurant_id %>
    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name) %>

    <%= f.label :pizza_id %>
    <%= f.collection_select :pizza_id, Pizza.all, :id, :name %>

    <%= f.label :price %>
    <%= f.text_field :price %%>

    <%= f.submit %>

    <% end %>