<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p style="color:red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @rp do |f| %>

<%= f.label :pizza_id %><br/>
<%= f.collection_select  :pizza_id, Pizza.all, :id, :name %><br/>

<%= f.label :restaurant_id %><br/>
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %><br/>

<%= f.label :price %><br/>
<%= f.number_field :price %><br/>

<%= f.submit %><br/>
    
<% end %>